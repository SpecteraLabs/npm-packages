{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "push": true,
      "ignoreChanges": [
        "**/*.md",
        "**/tests/**",
        "**/dist/**",
        "**/build/**",
        "**/.turbo/**",
        "**/.gitignore",
        "**/tsup.config.ts",
        "**/jest.config.ts",
        "**/*.d.ts",
        "**/packages/tag-parser/**/tsconfig.json",
        "**/packages/brawlstats/**/tsconfig.json",
        "**/packages/**/tsconfig.eslint.json"
      ],
      "version": {
        "allowBranch": "main",
        "conventionalCommits": true,
        "push": true,
        "createRelease": "github",
        "message": "chore(release): publish packages"
      },
      "create": {
        "license": "MIT",
        "keywords": [
          "ts",
          "typescript",
          "yarn"
        ]
      }
    }
  }
}
